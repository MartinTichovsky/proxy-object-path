{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "composite": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "rootDir": "src",
    "tsBuildInfoFile": "build/.tsbuildinfo"
  },
  "references": [
    {"path": "../"}
  ],
  "include": ["src"],
  "exclude": ["build", "config", "node_modules", "public", "scripts", "src-js"]
}